<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/image_view_checkmark"
        android:layout_width="329dp"
        android:layout_height="309dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:src="@drawable/gambardataberhasil" />
    <TextView
        android:id="@+id/text_view_mohon_tunggu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Berhasil mendapatkan Akses"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:textSize="16sp"
        android:gravity="center" />
    <TextView
        android:id="@+id/text_view_mohon_tunggu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Silahkan tap tombol dibawah ini untuk memulai mengisi form Lapor Kesehatan Harian."
        android:gravity="center"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/button_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:gravity="center" />
</LinearLayout>
